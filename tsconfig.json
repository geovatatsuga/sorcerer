{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*", "types/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "target": "ES2022",
    // Relax strictness temporarily to reduce noise while we fix imports
    "strict": false,
    "noImplicitAny": false,
    "lib": ["esnext", "dom", "dom.iterable"],
  "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,
    // Use classic node resolution so TypeScript won't require .js extensions in imports
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
